html(lang="en")
    head
        title Better Loot
        link(rel="stylesheet", href="style.css")
        link(rel="icon", type="image/png", sizes="32x32", href="favicon-32x32.png")
    body(onload="initStocksPage()")
        div(class="header", id="header")
                div
                    img(src="logo1.png", alt="BetterLoot", id="logo")
                div(class="headerButtonsDiv")
                    a(href="./news")
                        button(class="buttons", id="toNewsPage") News
                    a(href="./orders")
                        button(class="buttons", id="toOrdersPage") Trade
                    - var backToPortfolio = "./users/"+username.username
                    a(href=backToPortfolio)
                        button(class="buttons", id="toPortfolio") My Portfolio
                    a(href="./logout")
                        button(class="buttons", id="toLogout") Logout
        h4 All Stocks in the Market
        table(id="stocksHeader")
            tr
                td Symbol
                td Company Name
        table
            each stock in stocks
                tr
                    td
                        a(href="/stocks/" + stock.symbol) #{stock.symbol}
                    td
                        text #{stock.name}
        script(src="script.js")